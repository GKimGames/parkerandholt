<SampleLevel>
  <LevelInfo name="MattsLevel" camPosition="0 6 18">
	<Level />
    <Parker position="2 2"/>
    <Holt   position="2 2"/>
    <!-- Level Info Should Go In Here -->
  </LevelInfo>
  <Box2D>
    <!--
   -->

    <!-- top of pit left platform -->
    <Body>
      <BodyDef/>
      <Fixture shape="edge" point1="0 20" point2="10 20"/>
      <Fixture shape="edge" point1="14 20" point2="20 20"/>
      <Fixture shape="edge" point1="33 20" point2="37 20"/>
    </Body>

    <Body id="secondRightSensor">
      <BodyDef position="33 20"/>
      <Fixture shape="circle" radius="0.3" sensor="1"/>
    </Body>
    
    <Body id="firstRightSensor">
      <BodyDef position="20 20"/>
      <Fixture shape="circle" radius="0.3" sensor="1"/>
    </Body>
    
    <!-- Pit -->
    <!--top of pit ledge sensor and left wall-->
    <Body id="topOfPitLeft">
      <BodyDef position="10 20"/>
      <Fixture shape="circle" radius="0.3" sensor="1"/>
    </Body>
    <Body>
      <BodyDef/>
      <Fixture shape="edge" point1="10 3" point2="10 20"/>
    </Body>

    <!--top of pit ledge sensor and right wall-->
    <Body id="topOfPitRight">
      <BodyDef position="14 20"/>
      <Fixture shape="circle" radius="0.3" sensor="1"/>
    </Body>
    <Body>
      <BodyDef/>
      <Fixture shape="edge" point1="14 3" point2="14 20"/>
    </Body>

    <!--pit floor-->
    <Body>
      <BodyDef/>
      <Fixture shape="edge" point1="0 0" point2="10 0"/>
    </Body>
    <!-- end Pit -->
    
    <Body id="steve">
      <BodyDef bodyType="dynamicBody" position="137 -10"/>
      <Fixture shape="box" boxWidth="3" boxHeight="0.5" density="15"/>
    </Body>

    <Body id="ground">
      <BodyDef position="0 -50"/>
      <Fixture shape="box" boxWidth="1" boxHeight="1" density="40"/>
    </Body>
    <Body id="LevarArm1">
      <BodyDef bodyType="dynamicBody" position="65 20"/>
      <Fixture shape="box" boxWidth="14.16" boxHeight="1.2" density="40"/>
    </Body>
    <Body id="LevarArm2">
      <BodyDef bodyType="dynamicBody" position="50 20"/>
      <Fixture shape="box" boxWidth="14.16" boxHeight="1.2" density="40"/>
    </Body>
    
    
    <Joint id="Revjoint" type="revolute">
      <JointDef bodyA="ground" bodyB="LevarArm1"/>
    </Joint>
    <Joint id="Revjoint" type="revolute">
      <JointDef bodyA="ground" bodyB="LevarArm2"/>
    </Joint>
