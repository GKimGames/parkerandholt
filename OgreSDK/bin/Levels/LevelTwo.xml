    </Joint>
    -->
  </Box2D>
  <GameObjects>

    <GameObject type="OgreBox2D">
      <Object name="A lever Arm"/>
      <OgreObject position="0 0 0" >
        <Mesh mesh="LeverArm.mesh" scale="0.4 0.2 0.2"/>
      </OgreObject>
      <Box2DObject bodyID="LevarArm1"/>
    </GameObject>
    <GameObject type="OgreBox2D">
      <Object name="A lever Arm2"/>
      <OgreObject position="0 0 0" >
        <Mesh mesh="LeverArm.mesh" scale="0.4 0.2 0.2"/>
      </OgreObject>
      <Box2DObject bodyID="LevarArm2"/>
    </GameObject>

    <GameObject type="CheckPoint" position="4 0" />
    <GameObject type="PickUp" position="12 5" breakingForce="31"/>
    <GameObject type="Door" isEntrance="0" position="0 0" bodyID="topOfPitRight" />
    <GameObject type="ObjectSensor" sensorType="sensortype ledge" bodyID="topOfPitLeft" />
    <GameObject type="ObjectSensor" sensorType="sensortype ledge" bodyID="topOfPitRight" />
    <GameObject type="ObjectSensor" sensorType="sensortype ledge" bodyID="firstRightSensor" />
    <GameObject type="ObjectSensor" sensorType="sensortype ledge" bodyID="secondRightSensor" />
    
