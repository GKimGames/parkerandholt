<?xml version="1.0" encoding="utf-8"?>
<Character>
  <!-- Since the jaiqua mesh is being rotated 90 degrees around the Y axis-->
  <!-- the x axis is now the z axis and we translate along that-->
  <MeshInfo>
    <Mesh name="ninja.mesh" translate="-0.36 -0.5 0" rotateY="90"/>
  </MeshInfo>
  <ShapeInfo>
    <Size radius="0.3" height="1.884" scaleX="0.010" scaleY="0.010" scaleZ="0.010"/>
    <ShapeDef   mass="50.0"
                friction="50"
                restitution="0.1"
                linearDamping="0.00"
                />
  </ShapeInfo>
  <!-- MoveInfo stores all the information on forces that move the character-->
  <MovementInfo>
    <WalkingInfo walkingForce="36000"     maximumVelocity="2" />
    <RunningInfo runningForce="48000"     maximumVelocity="6" />
    <JumpingInfo jumpingForce="250"       jumpingAfterForce="40" />
    <AirInfo     airForce="1200"         maximumVelocity="6"  />
  </MovementInfo>
</Character>
