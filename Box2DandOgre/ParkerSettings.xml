<?xml version="1.0" encoding="utf-8"?>
<Character>
  <!-- Since the ninja mesh is being rotated 90 degrees around the Y axis-->
  <!-- the x axis is now the z axis and we translate along that-->
  <MeshInfo>
    <Mesh name="ninja.mesh" translateX="-0.36" translateY="0" translateZ="0" rotateY="90"/>
  </MeshInfo>
  <ShapeInfo>
    <Size width="0.3" height="1.884" scaleX="0.010" scaleY="0.010" scaleZ="0.010"/>
    <ShapeDef   mass="50.0"
                friction="50"
                restitution="0.1"
                linearDamping="0.00"
                />
  </ShapeInfo>
  <!-- MoveInfo stores all the information on forces that move the character-->
  <MovementInfo>
    <WalkingInfo 	walkingForce=""     	maximumVelocity="2" />
    <RunningInfo 	runningForce="60000"    	maximumVelocity="6" />
    <JumpingInfo 	jumpingForce="250"      		jumpingAfterForce="120" />
	<WallJumpInfo	jumpingForce="360"/>
    <AirInfo     		airForce="10000"         		maximumVelocity="6"  />
  </MovementInfo>
  <Bodys>
    <Body>
      <BodyDef bodyType="dynamicBody" position="0 10"/>
      <Fixture shape="box" boxWidth="3" boxHeight="3" density="15"/>
    </Body>
    <Body>
      <BodyDef bodyType="dynamicBody" position="3 10"/>
      <Fixture shape="box" boxWidth="3" boxHeight="3" density="15"/>
    </Body>
    <Body>
      <BodyDef bodyType="dynamicBody" position="-3 10"/>
      <Fixture shape="circle" radius="1.5" density="15"/>
    </Body>
    <Body>
      <BodyDef bodyType="dynamicBody" position="-3 10"/>
      <Fixture shape="polygon" pointCount="3" point0="0 0" point1="2 0" point2="1 2" density="15"/>
    </Body>
  </Bodys>
  <Platform gameObject="Platform" name="Platformy" p1="0 -5" p2="5 -5"/>
  <Object3 type="OgreBox2D">
    <GameObject name="OgreBox2D_Demo"/>
    <OgreObject mesh="cube.1m.mesh" position="0 0 10" />
    <Box2DObject>
      <Body>
        <BodyDef bodyType="dynamicBody" position="0 10"/>
        <Fixture shape="box" boxWidth="1" boxHeight="1" density="10"/>
      </Body>
    </Box2DObject>
  </Object3>
</Character>
